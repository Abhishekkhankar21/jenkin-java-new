pipeline {
 agent any
stages{
   stage("checkout"){
     steps {
          sh"""
           echo "Checkout done - $PWD"
          ls -lrt
           """
      }
   }

stage("building the application"){
     steps {
         sh"""
           echo "building java application"
           mvn clean pacakge
           echo "=====Biulding java application completed======"
           """
      }
   }
} // end of stages

} // end of pipeline
